<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.wisemapping.model.Image" table="IMAGE">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="extension"/>
        <many-to-one name="map" column="mindmap_id" unique="true" not-null="true" lazy="proxy"/>
        <many-to-one name="creator" column="user_id" unique="true" not-null="true" lazy="proxy"/>
    </class>

</hibernate-mapping>